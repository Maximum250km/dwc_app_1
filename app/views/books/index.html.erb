<!DOCTYPE html>
<html>
<head>
	<title>Bookers Trial</title>
</head>
<body>

<h1>Books</h1>


 <table>
   <thead>
   	<tr>
 		<th>title</th>
 		<th>body</th>
 		
    </tr>
</thead>

 <tbody>
 	<% @book_all.each do |book| %>
	  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book.id) %></td>
   	  <td><%= link_to "edit", edit_book_path(book.id) %></td>
 	  <td><%= link_to "destroy", book_path(book),method: :delete, "data-confirm" => "are you sure?" %></td>
 	  </tr>
     <% end %>
 </tbody>
</table>


<%= form_for(@book) do |f| %>
<h3>New Book</h3>
<%= f.text_field :title %>
<h4>本文</h4>
<%= f.text_area :body %>

<%= f.submit  'Create Books' %>
<% end %>

</body>
</html>
